
<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :ratiing, label: 'Rating out of 5' %>
    <%= f.input :genre, collection: Genre.all, label: 'Genre', prompt: 'Select Genre'  %>
    <%= f.input :author, collection: Author.all, label: 'Author', prompt: 'Select Author' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
